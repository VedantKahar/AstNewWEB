@{
    ViewBag.Title = "Home Page";
}

<h2>Welcome to the Home Page</h2>

<!-- Display the database connection status -->
<div>
    <h3>Database Connection Status</h3>
    <p>@ViewBag.DbStatusMessage</p>
</div>

<!-- Display the list of departments if available -->
@if (ViewBag.Departments != null && ViewBag.Departments.Count > 0){
    <h3>Department List</h3>
    <table border="1">
        <thead>
            <tr>
                <th>Department ID</th>
                <th>Department Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in ViewBag.Departments)
            {
                <tr>
                    <td>@dept.DEPT_ID</td>
                    <td>@dept.DEPT_NAME</td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <p>No departments available or error fetching data.</p>
}
<h2>Employee List</h2>
<!-- Display the list of employees if available -->
@if (ViewBag.Employees != null && ViewBag.Employees.Count > 0)
{
    <table border="1">
        <thead>
            <tr>
                @foreach (var key in ViewBag.Employees[0].Keys)
                {
                    <th>@key</th>
 <!-- Display dynamic column names -->
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in ViewBag.Employees)
            {
                <tr>
                    @foreach (var value in emp.Values)
                    {
                        <td>@value</td>
 <!-- Display dynamic column values -->
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees available or error fetching data.</p>
}



