            <div class="popup-footer">
                <button id="close-popup">Close</button>
            </div>
        </div>
    </div>



    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const birthdayPopup = document.getElementById('birthday-popup');
            const closePopupButton = document.getElementById('close-popup');
            const birthdayPersonName = document.getElementById('birthday-person-name');
            const birthdayWishElement = document.getElementById('birthday-wish');
            const birthdayPersonImage = document.getElementById('birthday-person-image');
            const confettiContainer = document.getElementById('confetti-container');

            // List of people with their birthday details (images, names, wishes)
            const birthdayPeople = [
                {
                    name: 'John Doe',
                    image: 'path_to_john_image.jpg',
                    wish: 'Wishing you a day full of happiness and laughter!',
                },
                {
                    name: 'Jane Smith',
                    image: 'path_to_jane_image.jpg',
                    wish: 'Hope your birthday is filled with joy and all your dreams come true!',
                },
                {
                    name: 'Alex Johnson',
                    image: 'path_to_alex_image.jpg',
                    wish: 'Cheers to another year of success and happiness, Alex!',
                }
            ];

            let currentBirthdayIndex = 0;

            // Display the first birthday person's popup
            displayBirthday(birthdayPeople[currentBirthdayIndex]);

            // Display the popup
            birthdayPopup.style.display = 'flex';
            birthdayPopup.classList.add('show');  // Trigger the show animation

            // Start the confetti animation
            triggerConfetti();

            // Close the popup when the button is clicked
            closePopupButton.addEventListener('click', function () {
                birthdayPopup.style.display = 'none';
                birthdayPopup.classList.remove('show');  // Hide popup
            });

            // Function to display the birthday person information
            function displayBirthday(person) {
                birthdayPersonName.textContent = person.name;
                birthdayWishElement.textContent = person.wish;
                birthdayPersonImage.src = person.image;

                // Reset animation classes
                const popupContent = document.querySelector('.popup-content');
                popupContent.classList.remove('show');

                // Force reflow so the animation restarts
                void popupContent.offsetWidth;

                // Add the animation class again
                setTimeout(function () {
                    popupContent.classList.add('show');
                }, 100); // Delay to ensure the class is removed first
            }

            // Function to trigger confetti animation
            function triggerConfetti() {
                const duration = 5000;  // How long confetti will fall (in ms)
                const animationEnd = Date.now() + duration;

                const interval = setInterval(() => {
                    const timeLeft = animationEnd - Date.now();
                    if (timeLeft <= 0) {
                        clearInterval(interval);
                    } else {
                        // Emit confetti
                        confetti({
                            particleCount: 5,
                            angle: 60,
                            spread: 70,
                            origin: { x: Math.random(), y: 0 },
                            colors: ['#ff5733', '#ffbd33', '#33ff57', '#3399ff', '#9933ff']
                        });
                        confetti({
                            particleCount: 5,
                            angle: 120,
                            spread: 70,
                            origin: { x: Math.random(), y: 0 },
                            colors: ['#ff5733', '#ffbd33', '#33ff57', '#3399ff', '#9933ff']
                        });
                    }
                }, 100);
            }

            // Automatically slide through birthday people every 5 seconds
            setInterval(function () {
                currentBirthdayIndex = (currentBirthdayIndex + 1) % birthdayPeople.length;
                displayBirthday(birthdayPeople[currentBirthdayIndex]);
            }, 5000); // Slide every 5 seconds

        });

    </script>

